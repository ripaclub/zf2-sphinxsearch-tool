{
    "name" : "ripaclub/zf2-sphinxsearch-tool",
    "description" : "Utility that provides a set of tools to create and handle Sphinx Search configs and sources",
    "homepage" : "https://github.com/ripaclub/zf2-sphinxsearch-tool",
    "license" : "BSD-2-Clause",
    "require" : {
        "php" : ">=5.4",
        "zendframework/zendframework" : "~2"
    },
    "require-dev" : {
        "phpunit/phpunit" : ">=4.0",
        "phpmd/phpmd" : "1.5.*",
        "pdepend/pdepend" : "1.1.*",
        "squizlabs/php_codesniffer" : "1.5.*",
        "fabpot/php-cs-fixer" : "*",
        "satooshi/php-coveralls" : "dev-master"
    },
    "authors" : [
        {
            "name" : "Leo Di Donato",
            "email" : "leodidonato@gmail.com"
        },
        {
            "name" : "Leonardo Grasso",
            "email" : "me@leonardograsso.com"
        }
    ],
    "keywords" : [
        "zf2",
        "sphinx",
        "search",
        "tool",
        "configuration",
        "config",
        "indexing",
        "search engine"
    ],
    "minimum-stability" : "dev",
    "autoload" : {
        "classmap" : [ "./Module.php" ]
    },
    "autoload-dev" : {
        "psr-0" : {
            "SphinxSearch\\ToolTest": "tests"
        }
    },
    "bin" : [
        "sphinx-tool.php"
    ]
}
